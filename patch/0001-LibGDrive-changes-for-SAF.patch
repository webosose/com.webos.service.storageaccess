+void Parser::_getNextToken() {
+    if (_instream == NULL) {
+        LOG(FATAL) << "There is no stream" << std::endl;
+    }
+    _cur_token = _instream->getNextToken(); 
+}
+
+JValue* Parser::_parseValue() {
+    switch(_cur_token.type()) {
+        case TT_STRING:
+            return _parseString();
+        case TT_INTEGER:
+            return _parseInt();
+        case TT_REAL:
+            return _parseReal();
+        case TT_TRUE:
+            return _parseTrue();
+        case TT_FALSE:
+            return _parseFalse();
+        case TT_NULL:
+            return _parseNull();
+        case TT_ARRAY_OPEN_BRACE:
+            return _parseArray();
+        case TT_OBJECT_OPEN_BRACE:
+            return _parseObject();
+        default:
+            _err = _instream->error();
+            return NULL;
+    }
